<div class="card">
  <div class="card-header <%= 'alert-success' if cardio_report.featured? %>">
    <div class="row align-items-center">
      <div class="col text-left">
        <% if cardio_report.activity_type == 'treadmill' %>
          <%= image_tag("icons8-treadmill-96.png", size:"24x24", title: "Treadmill") %>
        <% elsif cardio_report.activity_type == 'run' %>
          <%= image_tag("icons8-running-96.png", size:"24x24",  title: "Run") %>
        <% elsif cardio_report.activity_type == 'hike' %>
          <%= image_tag("icons8-trekking-96.png", size:"24x24",  title: "Hike") %>
        <% end %>
      </div>
      <div class="col-auto text-center">
        <%= cardio_report.date.strftime('%a, %b %d, %Y') %>
      </div>
      <div class="col text-right">
        <%= link_to edit_cardio_report_path(cardio_report) do %>
          <%= octicon "pencil", :height => 16 %>
        <% end %>
        &nbsp;&nbsp;
        <%= link_to cardio_report, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= octicon "trashcan", :height => 16 %>
        <% end %>
      </div>
    </div>
  </div>
  <table class="table">
    <tr>
      <td>Duration</td>
      <td>Distance</td>
      <td>Speed</td>
      <td>Calories</td>
    </tr>
    <tr>
      <td><b><%= cardio_report.duration.strftime('%M:%S') %></b></td>
      <td><b><%= '%.1f' % cardio_report.distance_miles %></b> miles</td>
      <td><b><%= '%.1f' % cardio_report.speed %></b> mph</td>
      <td><b><%= cardio_report.calories.to_i %></b> kcal</td>
    </tr>
  </table>
  <% if cardio_report.featured? %>
    <footer class="card-footer text-muted">
      <ul>
        <% if cardio_report.featured_by_calories? %>
          <li>&#9733; #<%= cardio_report.ranking_by_calories %> most calories burned</li>
        <% end %>
        <% if cardio_report.featured_by_speed_for_distance? %>
          <li>&#9733; Fastest <%= '%.1f' % cardio_report.distance_miles %> miles</li>
        <% end %>
      </ul>
    </footer>
  <% end %>
</div>