<%= bootstrap_form_with(model: cardio_report, local: true) do |form| %>
  <label>Date</label>
  <div class="row">
    <div class="input-group mb-3 col-lg-4 input-group">
      <%= date_field(:cardio_report, :datestamp, class: "form-control") %>
    </div>
  </div>


  <%= form.label :duration %>
  <div class="input-group">
    <%= form.select :part_hours, options_for_select(0..10, cardio_report.duration_time.hour), hide_label: true, append: "h" %>
    <%= form.select :part_minutes, options_for_select(0..59, cardio_report.duration_time.min), hide_label: true, append: "m" %>
    <%= form.select :part_seconds, options_for_select(0..59, cardio_report.duration_time.sec), hide_label: true, append: "s" %>
  </div>
  
  <label>Distance</label>
  <div class="row">
    <div class="input-group mb-3 col-lg-4 input-group">
      <%= number_field(:cardio_report, :distance_miles, step: 0.1, class: "form-control") %>
      <div class="input-group-append">
        <span class="input-group-text">miles</span>
      </div>
    </div>
  </div>


  <div class="form-group">
    <%= form.check_box :treadmill, label: "Treadmill?", custom: true %>
  </div>
  
  <hr>
  <button type="submit" class="btn btn-primary btn">Submit</button>&nbsp;&nbsp;
  <%= link_to "Back", cardio_reports_path, class: "btn btn-outline-secondary btn" %>
<% end %>
