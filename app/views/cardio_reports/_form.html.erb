  </div>

  <div class="field">
    <%= form.label :miles %>
    <%= form.number_field :miles, step: :any %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select(:cardio_type, CardioReport.cardio_types.keys) %>
  </div>

  <div class="field">
    <%= form.label :machine? %>
    <%= form.check_box :machine %>
  </div>

