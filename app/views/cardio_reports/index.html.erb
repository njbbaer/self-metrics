<p id="notice"><%= notice %></p>

<h1>Cardio Reports</h1>

<%= link_to 'New Cardio Report', new_cardio_report_path %>

<br><br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Miles</th>
      <th>Type</th>
      <th>Machine?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cardio_reports.order(finished_at: :desc).each do |cardio_report| %>
      <tr>
        <td><%= cardio_report.finished_at.strftime('%Y-%m-%d') %></td>
        <td><%= Time.at(cardio_report.duration).utc.strftime('%H:%M:%S') %></td>
        <td><%= cardio_report.miles %></td>
        <td><%= cardio_report.cardio_type %></td>
        <td><%= cardio_report.machine %></td>
        <td><%= link_to 'Show', cardio_report %></td>
        <td><%= link_to 'Edit', edit_cardio_report_path(cardio_report) %></td>
        <td><%= link_to 'Destroy', cardio_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>