<h1>Cardio Reports</h1>

<%= link_to 'New Cardio Report', new_cardio_report_path, class: "btn btn-primary" %>

<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Miles</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cardio_reports.ordered_by_recency.reverse.each do |cardio_report| %>
      <tr>
        <td><%= cardio_report.finished_at.strftime('%Y-%m-%d') %></td>
        <td><%= cardio_report.duration_time.strftime('%H:%M:%S') %></td>
        <td><%= cardio_report.distance_miles %></td>
        <td><%= cardio_report.cardio_type %></td>
        <td><%= link_to 'Edit', edit_cardio_report_path(cardio_report), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', cardio_report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>