<p id="notice"><%= notice %></p>

<h1>Sleep Reports</h1>

<%= link_to 'New Sleep Report', new_sleep_report_path %>

<br><br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Asleep</th>
      <th>Wakeup</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sleep_reports.order(asleep_at: :desc).each do |sleep_report| %>
      <tr>
        <td><%= sleep_report.asleep_at.strftime('%Y-%m-%d') %></td>
        <td><%= sleep_report.asleep_at.strftime('%I:%M %p') %></td>
        <td><%= sleep_report.wakeup_at&.strftime('%I:%M %p') %></td>
        <td><%= Time.at(sleep_report.duration_seconds).utc.strftime('%H:%M') if sleep_report.complete? %></td>
        <td><%= link_to 'Show', sleep_report %></td>
        <td><%= link_to 'Edit', edit_sleep_report_path(sleep_report) %></td>
        <td><%= link_to 'Destroy', sleep_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
