<% flash.each do |key, messages| %>
  <% if messages.instance_of? String %>
    <div class="<%= alert_class(key) %>"><%= messages %></div>
  <% elsif messages.instance_of? Array %>
    <% messages.each do |value| %>
      <div class="<%= alert_class(key) %>"><%= value %></div>
    <% end %>
  <% end %>
<% end %>
<% flash.clear %>