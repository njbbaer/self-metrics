<h1>Weight Reports</h1>

<%= link_to 'New Weight Report', new_weight_report_path, class: "btn btn-primary" %>

<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Pounds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weight_reports.ordered_by_recency.reverse.each do |weight_report| %>
      <tr>
        <td><%= weight_report.timestamp.strftime('%Y-%m-%d') %></td>
        <td><%= weight_report.weight_pounds %></td>
        <td><%= link_to 'Edit', edit_weight_report_path(weight_report), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Show', weight_report, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', weight_report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>